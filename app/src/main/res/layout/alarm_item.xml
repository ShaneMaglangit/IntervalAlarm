<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="alarm"
            type="com.shanemaglangit.intervalalarm.data.Alarm" />
        <variable
            name="alarmListener"
            type="com.shanemaglangit.intervalalarm.util.AlarmListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 minutes interval"
                tools:text="5 minutes interval" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:text="03:00 PM to 05:00 PM"
                tools:text="03:00 PM to 05:00 PM" />

            <TextView
                android:id="@+id/text_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Once only"
                tools:text="Once only" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>